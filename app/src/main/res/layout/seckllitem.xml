<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sitemm_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="25%w"
        app:layout_widthPercent="25%w"
        android:layout_margin="5dp"
        />
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="0dp"
          app:layout_heightPercent="25%w"
          app:layout_widthPercent="70%w"
          android:layout_marginTop="5dp"
          android:orientation="vertical"
          >
          <TextView
              android:id="@+id/sitemm_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="3dp"
              />
          <com.zhy.android.percent.support.PercentRelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              >
              <TextView
                  android:id="@+id/sitemm_price"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/red"
                  android:layout_marginLeft="10dp"
                  android:layout_centerVertical="true"
                  android:text="52"
                  />
              <Button
                  android:id="@+id/sitemm_pay"
                  android:layout_width="0dp"
                  app:layout_widthPercent="40%w"
                  android:layout_height="wrap_content"
                  android:text="立即抢购"
                  android:background="@drawable/s_cricle"
                  android:textColor="@color/write"
                   android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                   android:paddingRight="10dp"
                  />
          </com.zhy.android.percent.support.PercentRelativeLayout>
          <com.zhy.android.percent.support.PercentRelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >
              <TextView
                  android:id="@+id/sitemm_oldprice"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:layout_centerVertical="true"
                  android:text="52"
                  />
              <com.zhy.android.percent.support.PercentLinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:orientation="horizontal"
                  >
              <TextView
                  android:id="@+id/sitemm_pid"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:layout_gravity="center_vertical"
                  android:text="652"
                  android:layout_marginRight="10dp"
                  />

              <ProgressBar
                  android:id="@+id/sitemm_progress"
                  android:layout_width="0dp"
                  app:layout_widthPercent="40%w"
                  android:layout_height="0dp"
                  app:layout_heightPercent="30%w"
                  style="?android:attr/progressBarStyleHorizontal"
                  android:max="100"
                  android:progress="50"
                  android:secondaryProgress="70"
                  android:layout_gravity="center_vertical"
                  />
              </com.zhy.android.percent.support.PercentLinearLayout>
          </com.zhy.android.percent.support.PercentRelativeLayout>
      </LinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>

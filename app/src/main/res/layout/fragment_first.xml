<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="demo.bw.com.jingdong.view.fragment.FirstFragment">

   <com.zhy.android.percent.support.PercentLinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >
       <com.youth.banner.Banner
       android:id="@+id/fa_banner"
           android:layout_width="0dp"
           android:layout_height="0dp"
           app:layout_heightPercent="30%w"
           app:layout_widthPercent="100%w" >
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:orientation="horizontal"
               >
               <ImageView
                   android:id="@+id/dimension"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_alignParentLeft="true"
                   android:background="@mipmap/sao_hei"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="10dp"
                   />
               <ImageView
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:background="@mipmap/search_icon2"
                   android:layout_marginLeft="80dp"
                   android:layout_centerVertical="true"
                   />
               <EditText
                   android:id="@+id/sc"
                   android:layout_width="350dp"
                   android:layout_height="30dp"
                   android:layout_centerInParent="true"
                   android:background="@drawable/sstitle"
                   />
               <ImageView
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:background="@mipmap/root"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="80dp"
                   android:layout_alignParentRight="true"
                   />
               <ImageView
                   android:id="@+id/msg"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="10dp"
                   android:background="@mipmap/order_msg"
                   />
           </RelativeLayout>
       </com.youth.banner.Banner>
       <android.support.v4.view.ViewPager
           android:id="@+id/fa_viewpage"
           android:layout_width="0dp"
           android:layout_height="0dp"
           app:layout_heightPercent="30%w"
           app:layout_widthPercent="100%w"
           >
       </android.support.v4.view.ViewPager>
       
   </com.zhy.android.percent.support.PercentLinearLayout>


</ScrollView>
